@model DataLayer.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Email</label>
                <input asp-for="UserName" class="form-control" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Förnamn</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Efternamn</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ålder</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kön</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Beskrivning</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Profilbild(URL)</label>
                <input asp-for="ProfilePicture" class="form-control" accept="image/x-png, image/jpeg, image/gif" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Inaktivera konto</label>
                <label style="font-size: .8em;">Kryssa i rutan för att inaktivera kontot, 
                avmarkera rutan för att återaktivera kontot. Tryck sedan save för att spara ändringarna</label>
                <input asp-for="IsInactivated" class="form-control">
                <span asp-validation-for="IsInactivated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="submit" id="InactivateAccount" value="Avsluta konto" />
    <br /><br />
    <p><a asp-action="Index">Tillbaka till profil</a></p>
</div>

<!--Skript för avsluta konto-->
<script>
    var inactivateAccBtn = document.getElementById("InactivateAccount")
    inactivateAccBtn.addEventListener("click", InactivateAccount)

    function InactivateAccount(){
        alert("avsluta");
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

