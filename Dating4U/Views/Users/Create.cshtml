@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model DataLayer.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="UserName" class="form-control" value=@User.Identity.Name readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Förnamn</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Efternamn</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ålder</label>
                <input type="number" asp-for="Age" min="18" max="99" step="1" class="form-control" required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kön</label> <br>
                Man:  <input asp-for="Gender" type="radio" class="form-control" name="gender" id="RadioBox" value="Man" checked>
                Kvinna: <input asp-for="Gender" type="radio" class="form-control" name="gender" id="RadioBox" value="Kvinna">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Beskrivning</label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Profilbild(URL)</label>
                <input asp-for="ProfilePicture" class="form-control" required />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Vill du inte vara sökbar?</label>
                <p style="font-size:small">Klicka i checkrutan ifall andra användare inte ska kunna hitta dig genom vår sökfunktion.<br />Användare kommer fortfarande kunna hitta din profilsida i Utforska men de kan inte söka efter dig.</p>
                <input asp-for="IsNotSearchable" class="form-control" />
                <span asp-validation-for="IsNotSearchable" class="text-danger"></span>
            </div>
            <div>
                <label>Vad skulle du göra på första dejten?</label>
                Fågelskådning:  <input asp-for="Hobby" type="radio" class="form-control" name="Hobby" id="RadioBox" value="Fågelskådning" checked>
                Surfning: <input asp-for="Hobby" type="radio" class="form-control" name="Hobby" id="RadioBox" value="Surfning">
                Rita bilder i paint: <input asp-for="Hobby" type="radio" class="form-control" name="Hobby" id="RadioBox" value="Rita bilder i paint">
                <span asp-validation-for="Hobby" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>

    input[type=radio] {
        border: 0px;
        width: 10%;
        height: 1.5em;
        padding: 0;
        align-items: flex-start;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
